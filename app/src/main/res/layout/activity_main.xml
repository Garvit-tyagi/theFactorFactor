<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#000000"

    >
<EditText
    android:id="@+id/number"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="ENTER THE NUMBER"
    android:textColorHint="#FFFFFF"
    android:inputType="number"
    android:layout_above="@+id/number_button"
    android:layout_centerHorizontal="true"
    android:textColor="#FFFFFF"


    />

    <Button
        android:id="@+id/number_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="enter"
        android:onClick="factor"
        />




    <TextView
        android:id="@+id/highScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="highest score : "
        android:textAllCaps="true"
        android:layout_toLeftOf="@+id/highScoreValue"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:textColor="#FFFFFF"
        android:textSize="30dp"

        />
    <TextView
        android:id="@+id/highScoreValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#FFFFFF"

        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"


        android:textSize="30dp"

        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your score : "
        android:textAllCaps="true"
        android:layout_toLeftOf="@+id/yourScore"
        android:layout_above="@+id/highScore"
        android:layout_marginBottom="8dp"
        android:textColor="#FFFFFF"
        android:textSize="30dp"

        />
    <TextView
        android:id="@+id/yourScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#FFFFFF"

        android:layout_alignParentRight="true"
        android:layout_above="@+id/highScoreValue"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"


        android:textSize="30dp"

        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40sp"
        android:text="Test your skills"
        android:textColor="#FFFFFF"
        android:textSize="46sp"
        app:fontFamily="cursive" />

</RelativeLayout>